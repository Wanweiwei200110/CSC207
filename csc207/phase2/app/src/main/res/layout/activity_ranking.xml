                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/score1_icon"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/choose_icon"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <TextView
                    android:id="@+id/score1_name"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/no_data" />

                <TextView
                    android:id="@+id/score1_score"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/no_data" />

            </TableRow>

            <TableRow
                android:id="@+id/scoreboard_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/score2_icon"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/choose_icon"
                    tools:srcCompat="@tools:sample/avatars[1]" />

                <TextView
                    android:id="@+id/score2_name"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/score2_score"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/scoreboard_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/score3_icon"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/choose_icon"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <TextView
                    android:id="@+id/score3_name"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/score3_score"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
